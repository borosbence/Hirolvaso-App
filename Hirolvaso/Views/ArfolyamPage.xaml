<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hirolvaso.Views.ArfolyamPage"
             Title="Napi Árfolyam">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="10">
        <CollectionView ItemsSource="{Binding Arfolyamok}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Currency}"/>
                        <Label Text="{Binding Rate, StringFormat='{0} Ft'}"/>
                        <Label Text="{Binding Symbol}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="{Binding Idopont, StringFormat='Frissítés ideje: {0}'}"  />
    </VerticalStackLayout>
   
</ContentPage>